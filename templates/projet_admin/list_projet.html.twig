{% extends 'base.html.twig' %}

{% block title %}List Projets{% endblock %}

{% block body %}

    <!-- Title -->

    <hr class="hrmargintop">
    <h1 class="titreedit">List Projets</h1>
    <hr class="hrmarginbot">

    <!-- Table -->

    <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">Url de l'image</th>
            <th scope="col">Année</th>
            <th scope="col">Location</th>
            <th scope="col">Créateur</th>
            <th scope="col">Client</th>
            <th scope="col">View</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>

        <!-- Link in Loop -->

        {% for projet in projets %}
            <tbody>
                <tr>
                <th scope="row">{{ projet.id }}</th>
                <td>{{ projet.titreProjet }}</td>
                <td>{{ projet.imageAffichageProjet }}</td>
                <td>{{ projet.anneeProjet }}</td>
                <td class="listuppercase">{{ projet.locationProjet }}</td>
                <td class="listuppercase">{{ projet.createur }}</td>
                <td class="listuppercase">{{ projet.client }}</td>
                <td>
                    <a class="faview" href="{{ path('projet_show', {'id': projet.id}) }}"> <i class="fas fa-eye"></i></a>
                </td>
                <td>
                    <a class="faedit" href="{{ path('projet_edit' , {'id' :projet.id})}}"> <i class="fas fa-edit"></i>
                </td>
                <td>
                    <a class="fasuppr" href="{{ path('projet_delete' , {'id' :projet.id})}}"> <i class="fas fa-trash-alt"></i></a>
                </td>
                </tr>
            </tbody>
        {% endfor %}
    </table>
{% endblock %}