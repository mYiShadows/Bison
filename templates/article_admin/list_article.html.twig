{% extends 'base.html.twig' %}

{% block title %}List of Gallery{% endblock %}

{% block body %}

    <!-- Title -->

    <hr class="hrtop">
    <h1 class="titreedit">List of Gallery</h1>
    <hr class="hrmarginbot">

    <!-- Table Article -->
    <center>
    {% for message in app.flashes('article') %}
        <div class="alert alert-success alert-dismissible alert-article-success fade show">
            {{ message }}
            <button type="button" class="close button-alert-login" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    </center>

    <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">Url</th>
            <th scope="col">Année</th>
            <th scope="col">Location</th>
            <th scope="col">Client</th>
            <th scope="col">Createur</th>
            <th scope="col">Date</th>
            <th scope="col">View</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>

        <!-- Link in Loop -->

        {% for article in articles %}
            <tbody>
                <tr>
                <th scope="row">{{ article.id }}</th>
                <td>{{ article.titre }}</td>
                <td>{{ article.url }}</td>
                <td>{{ article.annee }}</td>
                <td class="listuppercase">{{ article.location }}</td>
                <td class="listuppercase">{{ article.client }}</td>
                <td class="listuppercase">{{ article.createur }}</td>
                <td>{{ article.createdAt | date('d/m/Y')}} à {{ article.createdAt | date('H:i')}}</td>

                <!-- Panel Edit -->

                <td>
                    <a class="faview" href="{{ path('article_show', {'id': article.id}) }}"> <i class="fas fa-eye"></i></a>
                </td>
                <td>
                    <a class="faedit" href="{{ path('article_edit' , {'id' :article.id})}}"> <i class="fas fa-edit"></i>
                </td>
                <td>
                    <a class="fasuppr" href="{{ path('article_delete' , {'id' :article.id})}}"> <i class="fas fa-trash-alt"></i></a>
                </td>
                </tr>
            </tbody>
        {% endfor %}
    </table>
{% endblock %}