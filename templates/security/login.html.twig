{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <!-- Banner Title -->

    <center>
        <hr class="hrmargintop">
        <h1 class="titreedit">Please Login</h1>
        <hr class="hrmarginbot">
    </center>

    <!-- Bloc Form -->
    
    

    <div class="blocloginwallpaper">
        <form class="formlogin" method="post"> <!-- Obligatoire -->
            <div class="bloclogin">    
                {% if error %}
                    <center>
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </center>
                {% endif %}
                <label class="black" for="inputEmail">EMAIL :</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <br>
                <label class="black" for="inputPassword">PASSWORD :</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <!-- Button -->

                <br>
                <button class="btn btn-register" type="submit">Sign in</button>
            </div>
        </form>     
    </div>
    
{% endblock %}
